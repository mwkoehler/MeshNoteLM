<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeshNoteLM.Views.LLMChatView">
    <Grid RowDefinitions="Auto,*,Auto" Padding="10">

        <!-- Header with LLM Selector -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
            <Label Grid.Column="0"
                   Text="LLM Chat"
                   FontSize="20"
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>

            <Button Grid.Column="1"
                    x:Name="LLMSelectorButton"
                    Text="Select LLM"
                    Clicked="OnLLMSelectorClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    Padding="15,8"/>
        </Grid>

        <!-- Chat Messages ScrollView -->
        <ScrollView Grid.Row="1" x:Name="ChatScrollView">
            <VerticalStackLayout x:Name="MessagesContainer" Spacing="10"/>
        </ScrollView>

        <!-- Input Area -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,Auto"
              Margin="0,10,0,0"
              ColumnSpacing="10">

            <Editor Grid.Column="0"
                    x:Name="MessageInput"
                    Placeholder="Type your question..."
                    HeightRequest="80"
                    VerticalOptions="Fill"/>

            <Button Grid.Column="1"
                    Text="Send"
                    Clicked="OnSendClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    VerticalOptions="End"
                    Padding="20,10"/>
        </Grid>
    </Grid>
</ContentView>
