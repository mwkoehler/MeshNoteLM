<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeshNoteLM.Views.LLMChatView">
    <Grid RowDefinitions="Auto,*,Auto" Padding="12" RowSpacing="12">

        <!-- Header with LLM Stack -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Start">
            <Label Grid.Column="0"
                   Text="Chat"
                   FontSize="14"
                   FontAttributes="Bold"
                   VerticalOptions="Start"/>

            <!-- HorizontalStackLayout for LLM buttons -->
            <HorizontalStackLayout Grid.Column="1" x:Name="LLMButtonsStack" Spacing="2" VerticalOptions="Start">
                <!-- LLM buttons will be added programmatically -->
            </HorizontalStackLayout>
        </Grid>

        <!-- Chat Messages ScrollView -->
        <ScrollView x:Name="ChatScrollView"
                    Grid.Row="1"
                    VerticalScrollBarVisibility="Always"
                    HorizontalScrollBarVisibility="Never"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill"
                    Orientation="Vertical">
            <VerticalStackLayout x:Name="MessagesContainer" Spacing="10"
                                 VerticalOptions="Start"
                                 HorizontalOptions="Fill"
                                 Padding="5"/>
        </ScrollView>

        <!-- Input Area -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto"
              ColumnSpacing="10">

            <Editor Grid.Column="0"
                    x:Name="MessageInput"
                    Placeholder="Type your question... (LLM Name: for specific LLM, Enter for new line, Ctrl+Enter or Send to send)"
                    HeightRequest="100"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill"
                    Keyboard="Chat"
                    Completed="OnMessageInputCompleted"/>

            <Button Grid.Column="1"
                    Text="Send"
                    Clicked="OnSendClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    VerticalOptions="End"
                    Padding="20,10"/>
        </Grid>
    </Grid>
</ContentView>