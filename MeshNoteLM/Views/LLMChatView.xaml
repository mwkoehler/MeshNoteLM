<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeshNoteLM.Views.LLMChatView">
    <Grid RowDefinitions="Auto,*,Auto" Padding="12" RowSpacing="8">

        <!-- Header with LLM Stack -->
        <Grid Grid.Row="0" RowDefinitions="Auto,Auto" VerticalOptions="Start" RowSpacing="4">
            <!-- Chat Title Row -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                <!-- Chat Title -->
                <Label Grid.Column="0"
                       Text="Chat"
                       FontSize="14"
                       FontAttributes="Bold"
                       VerticalOptions="Start"
                       HorizontalOptions="Start"/>

                <!-- Close Chat Button -->
                <Button Grid.Column="1"
                        x:Name="CloseChatButton"
                        Text="âœ•"
                        Clicked="OnCloseChatClicked"
                        BackgroundColor="Transparent"
                        TextColor="#666666"
                        FontSize="16"
                        FontAttributes="Bold"
                        WidthRequest="30"
                        HeightRequest="30"
                        Padding="0"
                        CornerRadius="15"
                        BorderColor="#CCCCCC"
                        BorderWidth="1"
                        VerticalOptions="Start"
                        HorizontalOptions="End"/>
            </Grid>

            <!-- Buttons Row -->
            <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto,Auto" VerticalOptions="Start" ColumnSpacing="8">
                <!-- Load Chat Button -->
                <Button Grid.Column="1"
                        x:Name="LoadChatButton"
                        Text="Load Chat"
                        Clicked="OnLoadChatClicked"
                        BackgroundColor="#6C757D"
                        TextColor="White"
                        FontSize="11"
                        HeightRequest="24"
                        Padding="8,4"
                        MinimumWidthRequest="70"
                        VerticalOptions="Start"/>

                <!-- Rename/Move Chat Button -->
                <Button Grid.Column="2"
                        x:Name="RenameMoveChatButton"
                        Text="Rename/Move"
                        Clicked="OnRenameMoveChatClicked"
                        BackgroundColor="#17A2B8"
                        TextColor="White"
                        FontSize="11"
                        HeightRequest="24"
                        Padding="8,4"
                        MinimumWidthRequest="80"
                        VerticalOptions="Start"/>

                <!-- HorizontalStackLayout for LLM buttons -->
                <HorizontalStackLayout Grid.Column="3" x:Name="LLMButtonsStack" Spacing="2" VerticalOptions="Start">
                    <!-- LLM buttons will be added programmatically -->
                </HorizontalStackLayout>
            </Grid>
        </Grid>

        <!-- Chat Messages ScrollView -->
        <ScrollView x:Name="ChatScrollView"
                    Grid.Row="1"
                    VerticalScrollBarVisibility="Always"
                    HorizontalScrollBarVisibility="Never"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill"
                    Orientation="Vertical">
            <VerticalStackLayout x:Name="MessagesContainer" Spacing="10"
                                 VerticalOptions="Start"
                                 HorizontalOptions="Fill"
                                 Padding="5"
                                 MinimumWidthRequest="300"/>
        </ScrollView>

        <!-- Input Area -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto"
              ColumnSpacing="10">

            <Editor Grid.Column="0"
                    x:Name="MessageInput"
                    Placeholder="Type your question... (LLM Name: for specific LLM, Enter for new line, Send to send)"
                    HeightRequest="100"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill"
                    Keyboard="Chat"
                    Completed="OnMessageInputCompleted"/>

            <Button Grid.Column="1"
                    Text="Send"
                    Clicked="OnSendClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    VerticalOptions="End"
                    Padding="20,10"/>
        </Grid>
    </Grid>
</ContentView>